#!/bin/bash

for f in $(cat ${2:-/opt/hack/SecLists/Discovery/Web-Content/quickhits.txt}); do
  f=$(echo $f | sed 's/^\///g') 
  url=$1$f
  echo $url
done | xargs -n1 -P30 -I {} curl --max-time 10 -L {} -w "%{response_code} %{size_download} {}  %{url_effective}\n" -k -s -o /dev/null | grep -v "000 0"
