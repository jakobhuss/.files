#!/bin/bash

input_args=${@:1:$#-1}
output_arg=${!#}

main() {
  check_ffmpeg
  check_input_args $input_args 
  check_output_arg $output_arg
  merge
}

merge() {
  ffmpeg -f concat -i <( for $f in $input_args ; do echo $f ; done | sed -e 's/^/file /' ) -c copy $output_arg
}


print_usage_and_exit() {
  echo "Usage:"
  echo "$0 source1.mp4 source2.mp4 ... sourceN.mp4 destination.mp4"
  exit 1
}

check_ffmpeg() {
  if [ ! which ffmpeg > /dev/null 2>&1 ] ; then
    echo "please install ffmpeg for this script to work"
    exit 1 
  fi
}

check_input_args() {
  if [ "$#" -eq 0 ]; then
      echo "missing file operand"
      print_usage_and_exit
  fi
  for f in $@; do
    if [ ! -f $f ] ; then
      printf '%s is not an existing file \n' "$f" >&2
      print_usage_and_exit
    fi
  done
}

check_output_arg() {
  if [ "$#" -eq 0 ]; then
      echo "missing destinaion operand"
      print_usage_and_exit
  fi
  if [ -f $1 ] ; then
    echo "$1 already exists"
    exit 1
  fi
}

main "$@"
